@model SubnetRequest
@{
    ViewData["Title"] = "Subnet Calculator";
}

<h1>Subnet Calculator</h1>

<form asp-action="Index" method="post" class="form">
  <div class="form-group">
    <label asp-for="IpAddress"></label>
    <input asp-for="IpAddress" class="form-control" />
    <span asp-validation-for="IpAddress" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="PrefixLength">CIDR Prefix (0â€“32)</label>
    <input asp-for="PrefixLength" class="form-control" type="number" />
    <span asp-validation-for="PrefixLength" class="text-danger"></span>
  </div>
  <button type="submit" class="btn btn-primary mt-2">Calculate</button>
</form>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
